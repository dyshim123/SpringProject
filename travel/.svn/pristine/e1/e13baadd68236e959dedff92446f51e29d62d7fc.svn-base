button {
  background: none;
  border: 2px solid #2C96ED;
  border-radius: 5px;
  color: #2C96ED;
  display: block;
  font-size: 0.8em;
  font-weight: bold;
  padding: 0.1em;
  position: relative;
  text-transform: uppercase;
